{% extends 'base.html.twig' %}

{% block body %}

    {% include 'header.html.twig' %}

<div class="container">

    <div class="jumbotron">
        <h1>{{ produit.nom }}</h1>
    </div>
        <div class="row">
            <div class="col-xs-6 col-md-6">
                <img class="img-responsive" src="/image/{{ produit.image }}">
            </div>
            <div class="col-xs-6 col-md-6">
                <h3 class="description">{{ produit.description }}</h3>
                <a class="btn btn-default btn-lg glyphicon glyphicon-shopping-cart"
                   href="{{ path('produit_show', { 'id': produit.id }) }}"> Ajouter</a>
                <a class="btn btn-default btn-lg" href="{{ path('produit_index') }}">Retour au catalogue</a>
            </div>
        </div>
    </div>
{% endblock %}
