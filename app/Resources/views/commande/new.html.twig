{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Soumettre la commande</h1>

        <div class="row">
            <div class="input-group">
                {{ form_start(form) }}
            </div>
            <div class="input-group">
                {{ form_row(form.nom) }}
            </div>
            <div class="input-group">
                {{ form_row(form.prenom) }}
            </div>
            <div class="input-group">
                {{ form_row(form.adresse) }}
            </div>
                <input type="button" value="Localiser" onclick="TrouverAdresse();" style="margin-bottom: 10px"/>
                <div id="map-canvas" style="height:220px;width:45%"></div>
                <input type="submit" value="Soumettre" style="margin-top: 10px"/>
                {{ form_end(form) }}


        </div>


        <ul>
            <li>
                <a href="{{ path('commande_index') }}">Back to the list</a>
            </li>
        </ul>
    </div>
{% endblock %}
